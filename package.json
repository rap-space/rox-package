{
  "private": true,
  "scripts": {
    "add": "node scripts/add.js",
    "link": "npm run build:compile && node ./scripts/link.js",
    "bootstrap": "lerna bootstrap",
    "setup": "npm run bootstrap && npm run link",
    "start": "npm run build:compile && node ./scripts/start.js",
    "watch:compile": "node ./scripts/compile.js --watch",
    "build:compile": "npm run clean:compile && node ./scripts/compile.js",
    "lint": "npm run lint:nofix -- --fix",
    "lint:nofix": "eslint --ext .js --ext .jsx ./",
    "test": "jest",
    "coverage": "npm run test -- --coverage",
    "clean:dist": "rm -rf ./packages/*/dist",
    "clean:compile": "rm -rf ./packages/*/lib",
    "clean:coverage": "rm -rf ./coverage",
    "clean:modules": "rm -rf ./packages/*/node_modules"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-export-default-module-exports": "^0.0.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-rax": "^0.5.0",
    "chalk": "^2.3.0",
    "chokidar": "^1.7.0",
    "conventional-commit-types": "^2.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.13.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "findup": "^0.1.5",
    "fs-extra": "^5.0.0",
    "ghooks": "^2.0.2",
    "glob": "^7.1.2",
    "inquirer": "^4.0.1",
    "jest": "^22.0.3",
    "lerna": "^2.5.1",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.0",
    "nuke-input": "^1.0.40",
    "nuke-layout": "^1.0.0",
    "nuke-page": "^1.0.1",
    "nuke-slip": "^1.0.5",
    "nuke-text": "^0.0.12",
    "nuke-theme-provider": "^1.0.7",
    "nuke-view": "^1.0.7",
    "rax": "^0.5.0",
    "rax-webpack-plugin": "^0.5.0",
    "rimraf": "^2.6.2",
    "semver-regex": "^1.0.0",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "xtemplate": "^4.6.1",
    "xtpl": "^3.4.0"
  },
  "peerDependencies": {
    "rax": "latest",
    "r-bridge": "latest",
    "rox-button": "latest",
    "rox-checkbox": "latest",
    "rox-dialog": "latest",
    "rox-icon": "latest",
    "rox-input": "latest",
    "rox-number-picker": "latest",
    "rox-progress": "latest",
    "rox-search-bar": "latest",
    "rox-slip": "latest",
    "rox-switch": "latest",
    "rox-tag": "latest",
    "rox-text": "latest",
    "rox-theme": "latest",
    "rox-theme-provider": "latest",
    "rox-view": "latest"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "setupFiles": [
      "./scripts/jest.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/",
      "/__modules__/",
      "/__files__/",
      "/lib/",
      "/dist/"
    ]
  },
  "config": {
    "ghooks": {
      "commit-msg": "node ./scripts/validate-commit-msg.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
